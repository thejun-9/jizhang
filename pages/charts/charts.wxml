<select prop-array='{{selectArray}}'  bind:select='select' ></select>
<picker mode="date" value="{{date}}" fields="month" start="2000-01" end="2021-05" bindchange="bindDateChange">
    <view class="picker">
        请选择日期:{{date}}
    </view>
</picker>
<view class="container">
    <view hidden='{{lineHidden}}'>
        <canvas canvas-id="lineCanvas" disable-scroll="true" class="lineCanvas" bindtouchstart="touchHandler" style="width:300px;height:200px;"></canvas>
    </view>
    <view hidden='{{noMessage}}'>
        {{date}} 无数据！
    </view>
    <view hidden='{{radarOutcomeHidden}}'>
        <canvas canvas-id="radarCanvasOutcome" disable-scroll="true" class="radarCanvasOutcome" style="width:300px; height:200px;"></canvas>
    </view>
    <view hidden='{{radarIncomeHidden}}'>
        <canvas canvas-id="radarCanvasIncome" disable-scroll="true" class="radarCanvasIncome" style="width:300px; height:200px;"></canvas>
    </view>
</view>