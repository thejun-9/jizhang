<view>
 
 <scroll-view >
  <block wx:key wx:for='{{msgList}}' wx:for-index="index">
   <view wx:if='{{item.speaker=="server"}}' id='msg-{{index}}' style='display: flex; padding: 2vw 11vw 2vw 2vw;'>
    <view style='width: 11vw; height: 11vw;'>
     <image style='width: 11vw; height: 11vw; border-radius: 10rpx;' src='../../icon/paipai1.png'></image>
    </view>
    <view style='width: 4vw; height: 11vw; margin-left: 0.5vw; display: flex; align-items: center; z-index: 9;'>
    </view>
    <view class='leftMsg'>
      {{item.content}}
      <view class="{{item.showView?'bright789_view_show':'bright789_view_hide'}}">
        <view class="flex-row">
          <image src="{{item.mu_icon}}" style='width: 11vw; height: 11vw; border-radius: 10rpx;'></image>
          <view>
            <progress class="progress" percent="{{por}}"  stroke-width="6" activeColor='#000' backgroundColor='#cccccc' active="true" active-mode="forwards">
            </progress>
            <view class="flex-row">
              <button size="mini" bindtap="back"> <image src='../../icon/back.png' style='width: 10vw; height: 10vw; border-radius: 10rpx;'></image></button>
              <button size="mini" bindtap="stop"> <image src='{{start_img}}' style='width: 10vw; height: 10vw; border-radius: 10rpx;'></image></button>
              <button size="mini" bindtap="forward"> <image src='../../icon/foward.png' style='width: 10vw; height: 10vw; border-radius: 10rpx;'></image></button>
            </view>
          </view>
        </view>
      </view>
    </view>
   </view>
   <view wx:else id='msg-{{index}}' style='display: flex; justify-content: flex-end; padding: 2vw 2vw 2vw 11vw;'>
    <view class='rightMsg'>{{item.content}}</view>
    <view style='width: 4vw; height: 11vw; margin-right: 0.5vw; display: flex; align-items: center; z-index: 9;'>
    </view>
    
    <view style='width: 11vw; height: 11vw;'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
   </view>
 
  </block>
  <view style='width: 100%; height: 18vw;'></view>
 </scroll-view>
 
 <view class='inputRoom'>
  <input bindinput="handleinput"  ></input>
  <button bindtap="handletap" style='font-size:35rpx;background-color:#FBB217;color:white;width: 30%; height: 10vw;'>发送</button>
 </view>
</view>
