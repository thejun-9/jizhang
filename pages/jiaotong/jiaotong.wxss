}

.className {
  width: 6rpx;
  height: 66rpx;
  background-color: black;
  border-radius: 6rpx;
  margin-top: 22rpx;
  animation: twinkling 1s infinite;
}

.animated {
  animation-duration: 1s;
  animation-fill-mode: both
}

@-webkit-keyframes twinkling {
  0% {
      opacity: 0;
  }

  100% {
      opacity: 1;
  }
}
.active{
  background-color: whitesmoke;
}