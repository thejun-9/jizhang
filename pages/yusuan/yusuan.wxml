<view class="top">
<image src="../../icon/background.png" class="background"></image>
<view>
  <text class="zongzhichu">支出总预算:</text>
  
    <text class="use">已用预算:
      <text>
        100
      </text>
    </text>
    <text class="unuse">未用预算:
      <view>
        100
      </view>
    </text>
  

</view>
</view>
<view class="column-box">
  <view wx:for="{{part}}" 
        wx:key="id"
        class="box"
        bindtap="handleTap"
        data-index="{{index}}"
  >
    <image class="pic" src="{{item.icon}}"></image>
    <view class="secbox">
      <view>{{item.name}}</view>
      <progress percent="{{item.money/item.leftmoney*100}}" color="pink"  class="progress">
        <view>余额：{{content}}</view>
      </progress>
      <view>支出预算:{{item.money}}</view>
    </view>
  </view>
</view>
