<picker mode="date" value="{{date}}" fields="month" start="2000-01" end="2021-05" bindchange="bindDateChange">
    <view class="picker">
        <text class="year_month">选择月份:{{account_date}}</text>
    </view>
</picker>
<view class="tabs">
    <view class="tabs_title">
        <view wx:for="{{tabs}}" wx:key="id" class="title_item {{item.isActive?'active':''}}" bindtap="handleItemTab" data-index="{{index}}">{{item.name}}</view>
    </view>
</view>
<view class="tabs_content">
    <view class="account_info">
        <view class="item_info">
            <text class="riqi">日期</text>
            <text>金额</text>
            <text>种类</text>
        </view>
        <view class="item_info" wx:for="{{accountinfo}}" wx:key="index" bindtap="handleItem" data-index="{{item}}">
            <text>{{item[4]}}</text>
            <text>{{item[2]}}</text>
            <text>{{item[3]}}</text>
        </view>
    </view>
</view>